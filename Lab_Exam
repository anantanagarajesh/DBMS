create database hostel_database;
use hostel_database;

create table student
(
sid int,
sname varchar(20),
saddress varchar(20),
gender varchar(4),
nationality varchar(5),
study varchar(20),
primary key(sid)
);

create table residency_office
(
rid int,
rname varchar(20)
);


create table hall
(
hid int,
hname varchar(20),
mid int,
mname varchar(20),
haddress varchar(20)
);

create table apartment
(
fno int,
fname varchar(20),
aadress varchar(20)
);

create table rooms
(
rno int,
rplaceno int,
primary key(rplaceno)
);


create table dormitory
(
dno int,
dbedno int,
dplaceno int,
primary key(dplaceno)
);


create table staff
(
staffid int,
staffname varchar(20),
primary key(staffid)
);

create table invoice
(
iid int,
sid int,
sname varchar(20),
due int,
pdate date,
foreign key (sid) references student(sid),
foreign key (sname) references student (sname)
);

create table inspect
(
staffid int,
hno int,
fno int,
foreign key (staffid) references staff(staffid),
foreign key (hno) references hall(hno),
foreign key (fno) references apartment (fno)
);

